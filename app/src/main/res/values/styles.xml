<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="EntryList">
        <item name="android:background">@drawable/item_rect_corner</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:elevation">1dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/divider</item>
    </style>

    <style name="EntryItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/padding_middle</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>
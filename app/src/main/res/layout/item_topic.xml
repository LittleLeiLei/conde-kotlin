<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:background="@drawable/item_rect_corner"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:padding="@dimen/padding_middle"
    android:layout_marginTop="@dimen/margin_middle"
    android:layout_marginLeft="@dimen/margin_middle"
    android:layout_marginRight="@dimen/margin_middle"
    android:transitionName="background"
    android:translationZ="@dimen/elevation">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_primary"
        android:textSize="@dimen/text_size_middle"
        tools:text="你好周杰伦" />

    <TextView
        android:id="@+id/tv_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"
        android:minEms="2"
        android:textColor="@color/text_color_light"
        android:textSize="@dimen/text_size_tiny"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_created_at"
        tools:text="299" />

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="0dp"
        android:src="@mipmap/ic_message"
        android:tint="@color/text_color_light"
        app:layout_constraintBottom_toBottomOf="@id/tv_like_count"
        app:layout_constraintEnd_toStartOf="@id/tv_like_count"
        app:layout_constraintTop_toTopOf="@id/tv_like_count"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/text_color_light"
        android:textSize="@dimen/text_size_tiny"
        app:layout_constraintBottom_toBottomOf="@+id/iv_author"
        app:layout_constraintStart_toEndOf="@+id/iv_author"
        app:layout_constraintTop_toTopOf="@+id/iv_author"
        tools:text="方文山" />

    <TextView
        android:id="@+id/tv_created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:textColor="@color/text_color_light"
        android:textSize="@dimen/text_size_tiny"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="2018" />

    <ImageView
        android:id="@+id/iv_created_at"
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:tint="@color/text_color_light"
        app:layout_constraintBottom_toBottomOf="@id/tv_created_at"
        app:layout_constraintEnd_toStartOf="@id/tv_created_at"
        app:layout_constraintTop_toTopOf="@id/tv_created_at"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/ic_date" />

    <ImageView
        android:id="@+id/iv_author"
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_author"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp" />

</android.support.constraint.ConstraintLayout>